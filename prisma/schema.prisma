// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  RH
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamento com reuniões
  meetings Meeting[]

  @@map("users")
}

model Room {
  id       Int    @id @default(autoincrement())
  name     String @unique
  capacity Int
  location String

  // Relacionamento com reuniões
  meetings Meeting[]

  @@map("rooms")
}

enum MeetingStatus {
  PENDING
  APPROVED
  REJECTED
}

model Meeting {
  id          Int           @id @default(autoincrement())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  duration    Int           // Duração em minutos (30, 60, 120)
  status      MeetingStatus @default(APPROVED) // Reuniões de 30min são aprovadas automaticamente
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relacionamentos
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  roomId Int
  room   Room @relation(fields: [roomId], references: [id])

  @@map("meetings")
}